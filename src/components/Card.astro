---
import {alphaDate} from "../assets/utils.js"
export interface props {
    image: string;
    title: string;
    date: string;
    description: string;
    alt?: string;
    slug: string;
}

const {date, title, image, description, alt = 'image', slug} = Astro.props;
---

<div class="card flex">
    <img loading="lazy" class="card-image" src={image} alt={alt}>
    <p class="card-date uppercase">{alphaDate(date)}</p>
    <h2 class="card-title">{title}</h2>
    <p class="card-description">{description}</p>
    <a class="button" href={slug}>Read More</a>
</div>